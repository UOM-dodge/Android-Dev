<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="@drawable/request_shape"
    android:padding="10dp">



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NamePlaceHolder"
                android:layout_toEndOf="@id/imageView" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:layout_below="@id/imageView"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:text="date date"
                android:layout_alignParentStart="true"/>


<!--    TODO add correct spacing-->
            <Button
                android:id="@+id/buttonAccept"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="A"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/baseline_done_24"
                android:layout_toEndOf="@id/description"
                android:layout_centerVertical="true"/>
<!-- TODO make btn RED-->
            <Button
                android:id="@+id/buttonDecline"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="D"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/baseline_cancel_24"
                android:layout_toEndOf="@id/buttonAccept"
                android:backgroundTint="@color/md_theme_light_error"
                android:layout_centerVertical="true"/>





</RelativeLayout>
