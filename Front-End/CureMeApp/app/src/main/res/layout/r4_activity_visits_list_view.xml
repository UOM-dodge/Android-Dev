<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23sp"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="3sp"
        android:layout_weight="50"
        android:orientation="horizontal">
        <TextView
            android:drawableLeft="@drawable/arrow_forward"
            android:id="@+id/R4_lastVisitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="TextView"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/R4_dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:layout_marginLeft="33sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/R4_passwordServiceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="TextView"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/R4_passwordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>