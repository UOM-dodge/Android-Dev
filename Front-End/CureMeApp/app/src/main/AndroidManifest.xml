<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:logo="@drawable/logo_200"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/CureMeApp"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".LogInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".R1Activity"/>

        <activity android:name=".LogInDetails"/>

        <activity android:name=".MainActivityR1"/>

        <activity android:name=".MainActivityR2"/>

        <activity android:name=".MainActivityR3"/>

        <activity android:name=".MainActivityR5"/>

        <activity android:name=".MainActivityR6"/>

        <activity android:name=".MainActivityR7"/>

        <activity android:name=".DoctorMenuActivity"/>

        <activity android:name=".WeekViewActivityR6"/>

    </application>

</manifest>